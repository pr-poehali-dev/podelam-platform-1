{
  "tests": [
    {
      "name": "OPTIONS preflight",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Missing userId",
      "method": "POST",
      "path": "/",
      "body": {"action": "load"},
      "expectedStatus": 400
    },
    {
      "name": "Load sessions",
      "method": "POST",
      "path": "/",
      "body": {"action": "load", "userId": 1},
      "expectedStatus": 200
    },
    {
      "name": "Unknown action",
      "method": "POST",
      "path": "/",
      "body": {"action": "unknown", "userId": 1},
      "expectedStatus": 400
    }
  ]
}
